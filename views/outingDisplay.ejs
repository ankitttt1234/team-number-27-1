<%- include('partials/header');-%>



<section id="content-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="content-title" style="text-align:center;">Students</h2>

        <% if(students.length==0) { %>

                <h4>No students</h4>
            <a  href="/hostels"><button class="btn btn-secondary">Go Back</button></a>
            <br>

        <%  }  else {%>
        <span>Search</span>
        <input type="search" class="light-table-filter" data-table="order-table" placeholder="Filter">
            <br><br>
        <div style="text-align:center;">
        <table class="order-table table">
        <thead>
            <tr>
                <th>Roll No.</th>
                <th>Name</th>
                <th>Block</th>
                <th>Room No.</th>
                <th>Guardian</th>
                <th>Remove</th>
            </tr>
        </thead>

            <% for(var i=0;i<students.length;i++) { %>
                <tr>
                    <td><a href="#"><%= students[i].roll %></a></td>
                    <td><%= students[i].name %></td>
                    <td><%= students[i].blockName %></td>
                    <td><%= students[i].roomNo %></td>
                    <td><%= students[i].guardian %></td>
                    <td><a href="/delOuting/<%= students[i]._id%>"><i class="fa fa-trash-o icon"></i></a></td>
                </tr>
            <%  } %>
        </table>
        </div>
       <% }%>
      </div>
    </div>
</section>

<%- include('partials/footer');-%>